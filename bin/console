#!/usr/bin/env ruby
# frozen_string_literal: true

# Loads an IRB console/session within `rails-autoscale-core` context by default.
# Pass a different library to load the console within its context.
#
# Examples:
#   bin/console
#   bin/console rails-autoscale-web

library = ARGV.shift || "rails-autoscale-core"
puts "Console: #{library}"

require "fileutils"
FileUtils.cd(library) do
  require "bundler/setup"
  require library

  require "irb"
  IRB.start(__FILE__)
end
